
@model FinalCaimanProject.Models.Projet

<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="@Url.Action("ProjetDetail", "Projet", new { id = Model.ProjetId})">Projet</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Terminer le projet</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>@Model.ProjetName</h1>
                        <p>
                            @Model.ProjetDescription
                        </p>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2 class="mb-5">Bilan du projet</h2>
                    <div class="simple-card">
                        <div class="simple-card__content">
                            <form action="#" class="formular" method="post">
                                <div class="form-group mb-5">
                                    <label for="ProjetObservationFinal">Observations générales</label>
                                    <textarea class="form-control" id="ProjetObservationFinal" name="ProjetObservationFinal" rows="10" ></textarea>
                                </div>
                                <p class="text-danger">@ViewData["MessageError"]</p>
                                <div class="form-group mb-5">
                                    <label for="money">Gain obtenu</label>
                                    <input type="text" class="form-control" id="ProjetMoney" name="ProjetMoney" value="@Model.ProjetMoney" >
                                </div>
                                <button type="submit" class="btn-green">
                                    Terminer le projet
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

