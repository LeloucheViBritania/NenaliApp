@model FinalCaimanProject.VM.ContactViewModel

    <main class="main-content">
        <div class="block">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb bg-white">
                                <li class="breadcrumb-item"><a href="/Contact/Contact">Contact</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Nouveau contact</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-12">
                        <div class="departmentDesc">
                            <h1>Nouveau contact</h1>
                        </div>
                    </div>
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="container">
                        <div class="alert alert-success container" role="alert">
                            <h4 class="alert-heading">Effectué!!</h4>
                            <p>Contact enregistré avec succès</p>
                        </div>
                    </div>
                }


                <div class="row">
                    <div class="col-12">
                        <div class="simple-card">
                            <div class="simple-card__content">
                                @using (Html.BeginForm("NewContact", "Contact", FormMethod.Post, new { @class = "formular", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactName)
                                            @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactPname)
                                            @Html.TextBoxFor(m => m.ContactPname, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactPname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactEmail)
                                            @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactEmail, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactNumber)
                                            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactSite)
                                            @Html.TextBoxFor(m => m.ContactSite, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactSite, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ContactFonction)
                                            @Html.TextBoxFor(m => m.ContactFonction, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ContactFonction, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <button type="submit" class="btn-green">
                                        Enregistrer
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

