@model FinalCaimanProject.VM.SpecialitieVM

<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="@Url.Action("Departement","Departement")">Departement</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau Departement</li>
                        </ol>
                    </nav>
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="container">
                        <div class="alert alert-success container" role="alert">
                            <h4 class="alert-heading">Effectué!!</h4>
                            <p>Vous venez de créer un nouveau département</p>
                        </div>
                    </div>
                }

                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>Nouvelle spécialité</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="simple-card">
                        <div class="simple-card__content">
                                @using(Html.BeginForm("Ajouter", "Departement", FormMethod.Post, new { enctype = "multipart/form-data", @class ="formular" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.SpecialiteName)
                                            @Html.TextBoxFor(m => m.SpecialiteName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.SpecialiteName, "", new { @class = "text-danger" })  
                                            <p class="text-danger">@ViewData["NameError"]</p>

                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.SpecialiteColor)
                                            @Html.TextBoxFor(m => m.SpecialiteColor, new { @class = "form-control", type = "color"})
                                            @Html.ValidationMessageFor(m => m.SpecialiteColor, "", new { @class = "text-danger" })
                                            <p class="text-danger">@ViewData["ColorError"]</p>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.SpecialiteInfo)
                                            @Html.TextAreaFor(m => m.SpecialiteInfo, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.SpecialiteInfo, "", new { @class = "text-danger" })
                                            <p class="text-danger">@ViewData["InfoError"]</p>
                                        </div>
                                        <div class="form-group col-md-6 mb-5">
                                            @Html.LabelFor(m => m.ImageSpecialité)
                                            <input type="file" class="form-control" id="ImageSpecialité" name="ImageSpecialité">
                                            @Html.ValidationMessageFor(m => m.ImageSpecialité, "", new { @class = "text-danger" })
                                            <p class="text-danger">@ViewData["ImageError"]</p>
                                            <p class="text-danger">@ViewData["SetError"]</p>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn-green">
                                        Enregistrer
                                    </button>
                                }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>
